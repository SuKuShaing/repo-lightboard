---
import LightBoardText from "@components/LightBoardText.astro";
import TextH2 from "@components/TextH2.astro";
---

<section class="contacto">
	<LightBoardText>
		<TextH2 texto="Contacto" />
		<p>Andres@lightBoard.cl</p>
	</LightBoardText>
</section>

<style>
	.contacto {
		display: grid;
		place-items: center;
		/* margin-top: 30px; */
		padding: 0 20px;
	}

	p {
		/* text-align: center; */
		font-family: Satisfy;
		font-size: clamp(3rem, 1.545rem + 4.545vw, 7rem);
		font-style: normal;
		font-weight: 600;
		/* line-height: 78px; 111.429% */
		/* letter-spacing: 1.4px; */

		background: linear-gradient(
			253deg,
			rgba(255, 255, 255, 0.9) -2.6%,
			rgba(255, 255, 255, 0.72) 97.25%
		);
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;

		margin-block: 0lh;

		text-shadow: 0px 0px 40px rgba(255, 0, 0, 1);
		/* -webkit-text-stroke-width: 1px; */
		/* -webkit-text-stroke-color: rgba(255, 0, 0, 0.9); */
		animation: glow 5s infinite;

		user-select: all;
		-webkit-user-select: all;
	}
	
    @keyframes glow {
        0%, 100% {
            text-shadow: 0px 0px 40px rgba(255, 0, 0, 1);
            -webkit-text-stroke-color: rgba(255, 0, 0, 0.9);
		}
		33% {
            text-shadow: 0px 0px 40px rgba(0, 0, 255, 1);
            -webkit-text-stroke-color: rgba(0, 0, 255, 0.9);
		}
		66% {
            text-shadow: 0px 0px 40px rgba(0, 255, 0, 1);
            -webkit-text-stroke-color: rgba(0, 255, 0, 0.9);
		}
	}
</style>
